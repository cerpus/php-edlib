{
    "name": "cerpus/edlib-api-client",
    "description": "Client for Cerpus Edlib Common API",
    "minimum-stability": "stable",
    "license": "GPL-3.0",
    "type": "library",
    "authors": [
        {
            "name": "Christian Einvik",
            "email": "christian.einvik@cerpus.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.3.3|^7.0",
        "guzzlehttp/promises": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.10"
    },
    "autoload": {
        "psr-4": {
            "Cerpus\\Edlib\\ApiClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cerpus\\Edlib\\ApiClient\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
